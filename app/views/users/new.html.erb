<h1 class="m-3 w-100 font-weight-bold text-white">Sign Up</h1>
<p> Please fill the form to create an account. </p>

<div class="form-view">
    <%= form_with(model: @user, local: true) do |f| %>

        <div class="form-group">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-field" %>
        </div>

        <div class="form-group">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-field" %>
        </div>

        <div class="form-group">
            <%= f.submit 'Submit', class: "button-link" %>
            <%= link_to 'Sign In', sign_in_path, class: "discreet-link" %>
        </div>

    <% end %>
</div>

